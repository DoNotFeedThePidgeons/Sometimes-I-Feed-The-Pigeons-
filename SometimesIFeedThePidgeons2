//05.12.20
#include <iostream>
#include <Windows.h>
#include <locale>
#include <math.h>
using namespace std;

struct Frac {
	int A[5][5];
};

class Funk {
	Frac n;
public:
	void Vvod();
	void Vivod();
	void Summa();
	void DSumma();
	void Max();
};

void Funk::Vvod() {
	cout << "Введите числа в массив: ";
	for (int i = 0; i < 5; i++)
		for (int j = 0; j < 5; j++)
			cin >> n.A[i][j];
}

void Funk::Vivod() {
	cout << "Массив: " << endl;
	for (int i = 0; i < 5; i++) {
		for (int j = 0; j < 5; j++)
			cout << n.A[i][j] << ' ';
		cout << endl;
	}
}

void Funk::Summa() {
	int S = 0;
	for (int i = 0; i < 5; i++) 
		for (int j = 0; j < 5; j++)
			S += n.A[i][j];	
	cout << "Сумма всех чисел массива = " << S << endl;
}

void Funk::DSumma() {
	int S = 0;
	for (int i = 0; i < 5; i++) 
		for (int j = 0; j < 5; j++)
			if(i == j) S += n.A[i][j];
	cout << "Сумма всех чисел главной диагонали = " << S << endl;
}

void Funk::Max() {
	int Max = 0;
	for (int i = 0; i < 5; i++)
		for (int j = 0; j < 5; j++)
			if (n.A[i][j] > Max) Max = n.A[i][j];
	cout << "Максимальный элемент массива = " << Max << endl;
}

int main() {
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	setlocale(0, "Russian");
	Funk Y;

	Y.Vvod();
	Y.Vivod();
	Y.Summa();
	Y.DSumma();
	Y.Max();
}
