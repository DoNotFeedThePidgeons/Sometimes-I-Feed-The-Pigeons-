#include <iostream>
#include <Windows.h>
using namespace std;

struct Numbers { 
	int Array[5][5];	//Инициализация массива 5х5
};

class Funk {			//Создание класса
	Numbers n;			
public:					//Перечисление функций класса
	void In();			//Ввод
	void Out();			//Вывод
	void PP();			//Замена Первой и Последней Строки
	void Change();		//Замена минимального и макс значений
};
//Ввод чисел в массив
void Funk::In() {
	for (int i = 0; i < 5; i++)
		for (int j = 0; j < 5; j++)
			cin >> n.Array[i][j];
}
//Вывод чисел из массива на экран
void Funk::Out() {
	for (int i = 0; i < 5; i++) {
		for (int j = 0; j < 5; j++)
			cout << n.Array[i][j] << ' ';
		cout << endl;
	}
}
/////////////////////////////////////////////
///////Замена первой и последней строк///////
/////////////////////////////////////////////
void Funk::PP() {						
	int P[5];							//Создание промежуточного массива 
	for (int i = 0; i < 5; i++)			//Присвоение промежуточному массиву значений первой строки
		P[i] = n.Array[0][i];
	for (int i = 0; i < 5; i++)			//Присвоение последней строке значений первой
		n.Array[0][i] = n.Array[4][i];
	for (int i = 0; i < 5; i++)			//Присвоение последней строке значений промежуточного массива 
		n.Array[4][i] = P[i];
}

////////////////////////////////////////////////////////////////////////////
///////Замена минмального и максимального значений двумерного массива///////
////////////////////////////////////////////////////////////////////////////

void Funk::Change() {
	int min, min_idx, min_idy;			//Инициализация переменных для минимального значения
	int max, max_idx, max_idy;			//Инициализация переменных для максимального значения
	max = min = max = n.Array[0][0];	//Присвоение минимальному и максимальному значениям первого элемента массива
	for (int i = 0; i < 5; i++)
		for (int j = 0; j < 5; j++) {	//Прогонка всего цикла и нахождение макс и мин значений
			if (n.Array[i][j] > max) {	//Нахождение максимального значения
				max = n.Array[i][j];
				max_idy = i;			//Сохраняет местоположения по осям y(i)
				max_idx = j;			//И x(j)
			}
			if (n.Array[i][j] < min) {	//Нахождение минимального значения
				min = n.Array[i][j];
				min_idy = i;
				min_idx = j;
			}
		}
	cout << "Минимальное значение массива = " << min << endl;	//Вывод макс и мин значений, просто для красоты
	cout << "Максимальное значение массива = " << max << endl;	
	int P;														//Инициализация промежуточной переменной P
	P = n.Array[max_idy][max_idx];								//Присваиваение промежуточной переменной значения макс
	n.Array[max_idy][max_idx] = n.Array[min_idy][min_idx];		//Присваивание максимальной значение минимальной
	n.Array[min_idy][min_idx] = P;								//Присваивание минимальной значение промежуточной(которая содержит в себе значение макс)
}

